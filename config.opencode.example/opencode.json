{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "input_move_up": "up",
    "input_move_down": "down",
    "input_newline": "shift+return,ctrl+return,alt+return",
    "app_exit": "ctrl+q,ctrl+d,<leader>q",
    "model_cycle_favorite": "ctrl+]",
    "model_cycle_favorite_reverse": "ctrl+["
  },
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/gpt-5-mini",
  "default_agent": "plan",
  "agent": {
    "ask": {
      "model": "github-copilot/gpt-5-mini",
      "mode": "primary",
      "color": "#7FD88F",
      "description": "Quick questions and lightweight exploration",
      "permission": {
        "*": "ask",
        "read": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "todoread": "allow",
        "todowrite": "allow",
        "webfetch": "allow",
        "bash": "deny",
        "edit": "deny",
        "task": "deny"
      }
    },
    "plan": {
      "model": "github-copilot/claude-sonnet-4.5",
      "color": "#78B9FF",
      "permission": {
        "*": "ask",
        "read": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "todoread": "allow",
        "todowrite": "allow",
        "webfetch": "allow",
        "bash": "ask",
        "task": "ask",
        "edit": "deny"
      }
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5",
      "color": "#5B3F9F",
      "permission": {
        "*": "ask",
        "read": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "todoread": "allow",
        "todowrite": "allow",
        "webfetch": "allow",
        "bash": "ask",
        "edit": "ask",
        "task": "ask"
      }
    }
  }
}
